<%- include("partials/header") -%>
<h1>Home</h1>
<p><%=para%></p>
<h2>Posts</h2>
<% posts.forEach((post)=>{ %>
    <div>
        <h3><%=post.title%></h3>
        <p><%=post.body.substr(0, 100)%>
            <% if(post.body.length>100){%>
                ...<a href="/posts/<%=post.title%>">Read more</a>
            <%}%>
        </p>
    </div>
<% }); %>
<%- include("partials/footer") -%>